.center {
    display: block;
    margin-left: auto;
    margin-right: auto;
    width: 50%;
body {
	background-color: #7A9E9F;
}

div#sign-in {
    background-color: #7A9E9F;
    min-height: 100%;
    padding: 20px 20px 20px 20px;
    display: block;
    width: 30%;
    margin-left: auto;
    margin-right: auto;
    margin-top: 20px;
    
}

input[type=text]#login, input[type=password]#login {
	width: 100%;
	padding: 15px;
	margin: 5px 0 22px 0;
	display: inline-block;
	border: none;
	background: #f1f1f1;
  }

  .myButton {
	background-color: #4F6367;
	color: white;
	border-radius: 10px;
	margin-bottom: 10px;
	margin-top: 10px;
	height: auto;
	font-size: 16px;
    width: 30%;
    
}

a#reg:link {
    color: #4F6367;
}
a#reg:visited {
    color: #4F6367;
}
a#reg:hover {
    color:white
}

p#butter {
	background-color: #B8D8D8;
	color: white;
	width: 50%;
    margin-left: auto;
    margin-right: auto;
	display: block;
}
